# Database Configuration
# For Docker (default):
DATABASE_URL=postgresql://assessment_user:assessment_password@localhost:5433/assessment_builder
# For Neon or other hosted PostgreSQL:
# DATABASE_URL=postgresql://user:password@hostname/database?sslmode=require

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret for authentication
JWT_SECRET=your-secret-key-change-in-production

# Encryption Key for API Keys (32+ characters recommended)
# In production (Google Cloud), use Secret Manager for this value
ENCRYPTION_KEY=your-32-character-encryption-key-change-in-production

# AWS S3 Configuration (optional)
S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-2

# Admin Configuration
SUPER_ADMIN_EMAILS=admin@example.com
SUPER_ADMIN_PASSWORD=change-me

# CORS Configuration
CORS_ORIGIN=*

