# Database Configuration
# For Docker (default):
DATABASE_URL=postgresql://assessment_user:assessment_password@localhost:5433/assessment_builder
# For Neon or other hosted PostgreSQL:
# DATABASE_URL=postgresql://user:password@hostname/database?sslmode=require

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret for authentication
JWT_SECRET=your-secret-key-change-in-production

# Encryption Key for API Keys (32+ characters recommended)
# In production (Google Cloud), use Secret Manager for this value
ENCRYPTION_KEY=your-32-character-encryption-key-change-in-production

# Storage Provider Configuration
# Options: "local" (base64 in database) or "gcs" (Google Cloud Storage)
STORAGE_PROVIDER=local

# Google Cloud Storage Configuration (required if STORAGE_PROVIDER=gcs)
GCS_BUCKET_NAME=your-gcs-bucket-name
GCS_PROJECT_ID=your-gcp-project-id
# Option 1: Path to service account key file
GCS_KEY_FILENAME=/path/to/service-account-key.json
# Option 2: Service account credentials as JSON string (alternative to key file)
# GCS_CREDENTIALS={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

# AWS S3 Configuration (optional, for future use)
S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-2

# Admin Configuration
SUPER_ADMIN_EMAILS=admin@example.com
SUPER_ADMIN_PASSWORD=change-me

# CORS Configuration
CORS_ORIGIN=*

